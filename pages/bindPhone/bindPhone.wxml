<view class="info-wrap">
<view class="address-wrap">
  <view class="address-bd">
    <view>
      <text>用户名</text>
      <input placeholder-class="phcolor" auto-focus placeholder="用户名"/>
    </view>
    <view>
      <text>生日</text>
      <input placeholder-class="phcolor" auto-focus placeholder="生日"/>
    </view>
    <view>
      <text>手机号</text>
