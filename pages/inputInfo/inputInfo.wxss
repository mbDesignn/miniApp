.info-wrap{
  padding:20rpx;
  background:#f5f5f5;
  height:100vh;
}
.address-w{
  background: #f3f3f3;
  height:100vh;
}
.address-bd{
  padding:20rpx 32rpx 0;
  background:#fff;
  border-radius: 10rpx;
}
.address-bd > view{
  display: flex;
  align-items: center;
  min-height: 92rpx;
  border-bottom: 1px solid #f3f3f3;
}
.address-bd > view > text{
  display: block;
  /* width:146rpx; */
}
.address-bd > view > text:first-child{
  width:146rpx;
  /* padding-right:10rpx; */
}

.address-bd > view > input{
  width: 70vw;
}

.address-bd > view:last-of-type{
  border-bottom:0rpx;
  text-align: right;
  vertical-align: top;
  display: flex;
  /* align-content: flex-end; */
  /* justify-content: flex-end; */
}

.phcolor{
  color: #d2d2d2;
}
.address-btn{
  margin:0rpx;
  width: 226rpx;
	height: 67rpx;
	line-height: 67rpx;
	background-color: #000000;
  border-radius:0;
  color:#fff;
}
.address-btn::after{
  border:0px;
}
.info-tips{
  text-align: left;
  font-size: 24rpx;
}