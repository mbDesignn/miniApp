/* pages/detail/detail.wxss */
.imgBanner {
	width: 100%;
	height: 810rpx;
}
.swipe-num {
  position: absolute;
  top: 750rpx;
  right: 20rpx;
  z-index: 100;
  width: 51rpx;
	background: rgba(0, 0, 0, 0.13);
	border-radius: 12rpx;
  text-align: center;
  display: flex;
  align-content: center;
  justify-content: center;
}
.swipe-num text{
  /* margin-top:-30rpx; */
  font-family: SourceHanSansCN-Regular;
	font-size: 19rpx;
	color: #fbfbfb;
}
.swipe-num text:nth-of-type(1){
  padding-right:4rpx;
  color:#fff;
  font-size: 21rpx;
  font-weight: bold;
}

.de-h {
	padding: 30rpx 0 30rpx 45rpx;
	background: #fff;
	display: flex;
	flex-direction: row;
}

.de-h-ml {
	font-family: SourceHanSansCN-Regular;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #2b2d2c;
}

.de-h-mll {
	font-family: SourceHanSansCN-Regular;
	font-size: 18rpx;
	line-height: 36rpx;
	color: #9e9e9e;
	display: block;
}

.de-p-t {
	width: 42rpx;
	height: 18rpx;
	font-family: SourceHanSansCN-Regular;
	font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #9e9e9e;
}

.de-p-p {
	font-family: SourceHanSansCN-Medium;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #dc1640;
}

.de-h-info {
	flex: 7;
}

.de-h-share {
  padding-right:40rpx;
	flex: 2;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  text-align: center;
}

.de-list{
  padding-bottom: 30rpx;
}

.de-list-t {
	padding: 26rpx 0 30rpx;
	background-color: #f3f3f3;
	text-align: center;
}

.de-list-t image {
	width: 259rpx;
	height: 30rpx;
}

.de-list-bd {
	padding: 10px 10px;
	display: flex;
	justify-content: space-between;
}

.de-list-c {
	overflow: hidden;
}

.de-list-c image {
	width: 225rpx;
	height: 244rpx;
}

.de-list-text {
	font-family: SourceHanSansCN-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20rpx;
	letter-spacing: 0rpx;
	color: #2b2d2c;
	display: block;
}

.de-list-price {
	font-family: SourceHanSansCN-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	/* line-height: 30rpx; */
	letter-spacing: 0rpx;
	color: #dc1640;
	display: block;
}

.de-ft {
  position: fixed;
  bottom:0;
	display: flex;
	justify-content: space-between;
	border-top: 1rpx solid #d7d7d7;
  width:750rpx;
  background:#fff;
}

.de-ft-info {
	flex: 350rpx;
  display: flex;
}

.de-ft-info > view{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-self: center;
  text-align: center;
}
.de-ft-info > view > image{
  margin: 0 auto;
  display: block;
}
.de-ft-info > view > text{
  font-size:24rpx;
  color: #626262;
}

.de-ft button {
	flex: 200rpx;
	height: 102rpx;
	line-height: 102rpx;
	border-radius: 0rpx;
	font-size: 28rpx;
	color: #fff;
	background-color: #0094b2;
	-webkit-tap-highlight-color: rgba(255, 0, 0, 0.5);
	outline: none;
}

.de-ft button::after {
	border: 0;
}

.de-ft button:last-of-type {
	background-color: #173c6b;
}

.goods-detai {
  padding-bottom: 120rpx;
}
.detail-img {
  margin-top:-13rpx;
  width: 100%;
}