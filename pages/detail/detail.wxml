<view class='detail-content'>
  <view>
    <!-- <image class='imgBanner' src='http://139.224.72.205/images/loreal/detai_banner.jpg'></image> -->
    <swiper autoplay="true" style="position:relative;width:{{width}}rpx;height:{{height}}rpx;">
    <block wx:for="{{imgData}}" wx:key="index">
      <swiper-item>
        <image class='imgBanner' bindload='setContainerHeight' src='{{item}}'></image>
        <view class="swipe-num">
          <text>{{index + 1}}</text>
          <text>/</text>
          <text>{{imgData.length}}</text>
        </view>
      </swiper-item>
    </block>
  </swiper>
  </view>
  <view class='de-h'>
    <view class='de-h-info'>
      <text class='de-h-ml'>勃朗圣泉专研修护舒缓喷雾250ml</text>
