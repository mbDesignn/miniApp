      <view>
        <text class='de-p-t'>价格：</text>
        <text class='de-p-p'>￥165.00</text>
      </view>
    </view>
    <view class='de-h-share'>
      <view class="share-content">
        <image class="share-img" src="/static/images/icon/share.png"></image>
        <text class="share-text">分享</text>
      </view>
    </view>
  </view>
  <view class='de-list'>
    <view class='de-list-t'>
      <image src='http://139.224.72.205/images/loreal/de_info_t.png'></image>
    </view>
    <view class='de-list-bd'>
      <view class='de-list-c'>
        <image src='http://139.224.72.205/images/loreal/de_es_img.jpg'></image>
        <text class='de-list-text'>
          舒缓修红霜
        </text>
        <text class='de-list-text'>
