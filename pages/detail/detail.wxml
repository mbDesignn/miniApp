          ￥285.00
        </text>
      </view>
    </view>
  </view>
  <view class="goods-detail">
   <image class="detail-img" wx:for="{{urlList}}" wx:key="index" src="{{item}}" mode="widthFix" ></image>
  </view>
  <view class='de-ft'>
    <view class="de-ft-info">
      <view>
        <image style="width:56rpx;height:43rpx;" src="../../static/images/logo.png"></image>
        <text>首页</text>
      </view>
      <view>
        <mp-icon type="outline" icon="comment" color="gray" size="{{24}}"></mp-icon>
        <text>客服</text>
      </view>
      <view bindtap="addToCart">
        <mp-icon type="outline" icon="star" color="gray" size="{{24}}"></mp-icon>
        <text>购物车</text>
      </view>
    </view>
    <button bindtap="addToCart">加入购物车</button>
    <button bindtap="gotoBook">立即购买</button>
  </view>
</view>