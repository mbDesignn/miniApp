<template name="cart-goods">
  <!-- 产品 -->
  <view class="cart-wrap">
    <view class="product">
      <view class="product-select">
        <mp-checkbox-group prop="radio" multi="{{false}}" bindchange="radioChange">
          <mp-checkbox wx:for="{{radioItems}}" wx:key="value" label="{{item.name}}" value="{{item.value}}" checked="{{item.checked}}"></mp-checkbox>
        </mp-checkbox-group>
      </view>
      <view class="product-img">
        <image src="http://139.224.72.205/images/loreal/cart/mini_img.jpg"></image>
      </view>
      <view class="product-info">
        <text class="product-title">勃朗圣泉专研修护舒缓喷雾250ml</text>
        <text class="product-title-m">婴儿及敏感肌适用</text>
        <text class="product-price">￥ 165.00</text>
      </view>
    </view>
    <!-- 活动代码 -->
    <view class="active-wrap">
      <rich-text class="active-t">活动代码</rich-text>
      <view class="active-bar">
        <input class="weui-input" auto-focus placeholder="请输入活动代码" />
        <button class="bt-submit">提交</button>
      </view>
    </view>
    <view class='de-list'>
      <view class='de-list-t'>
        <image src='http://139.224.72.205/images/loreal/cart/title.png'></image>
      </view>
      <view class='de-list-bd'>
        <view class='de-list-c'>
          <image src='http://139.224.72.205/images/loreal/de_es_img.jpg'></image>
          <view>
            <text class='de-list-text'>
              小绷带修护霜 50ml
            </text>
          </view>
          <view>
            <text class='de-list-sm'>
              对抗换季泛红
            </text>
          </view>
          <view>
            <text class='de-list-price'>
              ￥285.00
            </text>
          </view>
        </view>
        <view class='de-list-c'>
          <image src='http://139.224.72.205/images/loreal/de_es_img.jpg'></image>
          <view>
            <text class='de-list-text'>
            小绷带修护霜 50ml
          </text>
          </view>
          <view>
            <text class='de-list-sm'>
            对抗换季泛红
          </text>
          </view>
          <view>
            <text class='de-list-price'>
            ￥285.00
          </text>
          </view>
        </view>
      </view>
    </view>

  </view>
  <view class="pay-bar">
    <view>
      <icon type="success"></icon>
      <text>全选</text>
    </view>
    <view>
      <view>
        <text>合计：</text>
        <text>￥179.00</text>
      </view>
      <text>（运费：￥0）</text>
    </view>
    <button>前往支付</button>
  </view>
</template>